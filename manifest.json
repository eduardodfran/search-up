{
  "manifest_version": 2,
  "name": "Search Up",
  "version": "0.1",
  "description": "A floating search bar to get quick AI answers.",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "https://searchup.vercel.app/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SearchUP Settings"
  },
  "commands": {
    "toggle_search": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle the search bar"
    },
    "summarize_page": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Summarize current page"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "search-up@example.com"
    }
  }
}
